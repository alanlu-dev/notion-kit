{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "app:prepare": {
      "cache": false
    },
    "pkg:prepare": {
      "dependsOn": ["^pkg:prepare"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "cleanup": {
      "cache": false
    },
    "build:clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".output/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "inputs": [".env"]
    },
    "lint": {},
    "lint:eslint": {},
    "typecheck": {},
    "coverage": {
      "outputs": ["coverage/**"]
    }
  }
}
